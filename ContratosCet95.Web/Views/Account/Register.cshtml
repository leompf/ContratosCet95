@model ContratosCet95.Web.Models.RegisterNewUserViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="box">
    <h3>Register new User</h3>
    <form method="post">
        <div asp-validation-summary="ModelOnly"></div>

        <div class="row gtr-uniform gtr-25 ">
            <div class="col-12">
                <h4><label asp-for="FirstName">First Name</label></h4>
                <input asp-for="FirstName" type="text" style="width:50%; margin-top:-10px;" />
                <span asp-validation-for="FirstName"></span>
            </div>

            <div class="col-12">
                <h4><label asp-for="LastName">Last Name</label></h4>
                <input asp-for="LastName" type="text" style="width:50%; margin-top:-10px;" />
                <span asp-validation-for="LastName"></span>
            </div>

            <div class="col-12">
                <h4><label asp-for="Username">Username</label></h4>
                <input asp-for="Username" type="text" style="width:50%; margin-top:-10px;" />
                <span asp-validation-for="Username"></span>
            </div>

            <div class="col-12">
                <h4><label asp-for="Password">Password</label></h4>
                <input asp-for="Password" type="password" style="width:50%; margin-top:-10px;" />
                <span asp-validation-for="Password"></span>
            </div>

            <div class="col-12">
                <h4><label asp-for="RoleId">Role</label></h4>
                <select asp-for="RoleId" asp-items="Model.Roles"></select>
                <span asp-validation-for="RoleId"></span>
            </div>

            <div class="col-12">
                <input type="submit" value="Create user" class="button" style="margin-top: 4px" />
            </div>
        </div>
    </form>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
